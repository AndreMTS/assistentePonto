{
  "manifest_version": 3,
  "name": "bateuPonto",
  "version": "1.0",
  "description": "Lembrete para registro de ponto",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/transparent_image_16x16.png",
      "48": "icons/transparent_image_32x32.png",
      "128": "icons/transparent_image_128x128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/transparent_image_16x16.png",
    "48": "icons/transparent_image_32x32.png",
    "128": "icons/transparent_image_128x128.png"
  }
} 